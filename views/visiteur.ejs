
<script src="js/widgets/music/controllers/visitor.js"></script>

<script>
    // When visitor vote
//     TODO : problem id
    function active(idContent, idWidget) {



        var musics = document.getElementById('music-list').children;
        for(var k = 0; k < musics.length; k++) {
            musics[k].className = "list-group-item";
        }

        document.getElementById(idContent).className = "list-group-item active";

        vote(idContent, idWidget);
    }

</script>

<!DOCTYPE html>

<html>
<head>
    <title>Choose ‘N’ Broadcast</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
</head>

<body>
<h1>Choose Music</h1>

<div id="music-list" class="list-group">

    <% for(var i=0; i<listContent.length; i++) { %>

    <a href="#" id=<%=i%> class="list-group-item" Onclick="active(this.id, 1);">
        <span class="badge"><%=listContent[i].nbVote%></span>
        <%= listContent[i].nomContent %>
    </a>

    <% } %>

</div>

</body>
</html>